<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    id="com.ionic.update"
    version="0.0.3">
    <name>IonicUpdate</name>
    <description>Ionic Update Plugin</description>
    <license>Apache 2.0</license>
    <keywords>Ionic,update</keywords>
    <repo>https://github.com/driftyco/ionic-plugins-update</repo>
    <issue>https://github.com/driftyco/ionic-plugins-update/issues</issue>

    <js-module src="www/ionicupdate.js" name="IonicUpdate">
        <clobbers target="IonicUpdate" />
    </js-module>

    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="IonicUpdate">
                <param name="android-package" value="com.ionic.update.IonicUpdate"/>
            </feature>
        </config-file>

        <source-file src="src/android/IonicUpdate.java" target-dir="src/com/ionic/update" />
    </platform>

    <!-- ios -->
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="IonicUpdate">
                <param name="ios-package" value="IonicUpdate" onload="true" />
            </feature>
        </config-file>

        <header-file src="src/ios/IonicUpdate.h" />
        <source-file src="src/ios/IonicUpdate.m" />
    </platform>
</plugin>
